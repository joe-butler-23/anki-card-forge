{
  "name": "anki-card-forge",
  "private": true,
  "version": "1.0.1",
  "description": "Anki Card Forge - AI-powered flashcard generation application",
  "author": "Joe Butler <joe@example.com>",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "build": "tsc --project config/tsconfig.json && vite build --config config/vite.config.ts",
    "preview": "vite preview --config config/vite.config.ts",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron .",
    "package": "npm run build && electron-builder --publish never"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "dompurify": "^3.3.1",
    "lucide-react": "^0.344.0",
    "mathjax-full": "^3.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.joebutler.ankicardforge",
    "productName": "Anki Card Forge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "src/prompts/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build-assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.education",
      "icon": "build-assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "category": "Education",
      "icon": "build-assets/icon.png"
    }
  }
}
